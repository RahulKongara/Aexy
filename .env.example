# ===========================================
# AEXY ENVIRONMENT VARIABLES
# ===========================================

# -----------------------------------------
# Database Configuration
# -----------------------------------------
# Local: postgresql://postgres:password@localhost:5433/aexy?schema=public
# Production: Get from Railway/Render/your hosting provider
DATABASE_URL=postgresql://postgres:your-password@localhost:5433/aexy?schema=public

# For docker-compose.prod.yaml only
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=aexy
POSTGRES_PORT=5432

# -----------------------------------------
# Backend Configuration
# -----------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

PORT=5000
NODE_ENV=production

# -----------------------------------------
# AI Service Configuration
# -----------------------------------------
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
USE_REAL_AI=true

# -----------------------------------------
# Frontend Configuration (for production builds)
# -----------------------------------------
# Local development
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000

# Production - Replace with your deployed backend URLs
# VITE_API_URL=https://your-backend.railway.app
# VITE_WS_URL=wss://your-backend.railway.app

# For docker-compose.prod.yaml
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

